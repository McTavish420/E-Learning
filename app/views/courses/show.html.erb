<p>
  <strong>Title:</strong>
  <%= @course.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @course.description %>
</p>

<p>
  <strong>Short Description:</strong>
  <%= @course.short_description %>
</p>

<p>
  <strong>Total Lessons:</strong>
  <%= @course.lessons.count %>
</p>

<div>
<%= link_to 'Add New Lesson', new_lesson_path %>
  <p>
    <strong>Lessons:</strong>
    <% @lessons.each do |lesson| %>
        <p><%= link_to lesson.title, lesson %></p>
    <% end %>
  </p>
</div>

<p>
  <strong>Language:</strong>
  <%= @course.language %>
</p>

<p>
  <strong>Level:</strong>
  <%= @course.level %>
</p>

<p>
  <strong>Price:</strong>
  <%= @course.price %>
</p>

<p>
  <strong>User:</strong>
  <%= @course.user %>
</p>


