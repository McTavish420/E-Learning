<h1>Courses: <%= @courses.count %></h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>User</th>
      <th>Lessons</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.title %></td>
        <td><%= course.description %></td>
        <td><%= course.user %></td>
        <td><%= course.lessons.count %></td>
        <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) if policy(course).edit? %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } if policy(course).destroy? %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<td><%= link_to 'Back', root_path %></td>
<%= link_to 'New Course', new_course_path if policy(@courses).new? %>
