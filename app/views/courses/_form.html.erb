<%= form_with(model: course, local: true) do |form| %>
  <% if course.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(course.errors.count, "error") %> prohibited this course from being saved:</h2>

      <ul>
        <% course.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :short_description %>
    <%= form.text_area :short_description %>
  </div>

  <div class="field">
    <%= form.label :language %>
    <%= form.select :language, ["English", "日本語", "বাংলা"] %>
  </div>

  <div class="field">
    <%= form.label :level %>
    <%= form.select :level, ["Beginner", "Intermediate", "Advanced", "Professional"] %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.number_field :price, in: 10.0..200.0, step: 0.5 %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
